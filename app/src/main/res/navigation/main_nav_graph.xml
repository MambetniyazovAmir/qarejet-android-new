<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_nav_graph"
    app:startDestination="@id/dashboard">

    <fragment
        android:id="@+id/dashboard"
        android:name="com.shagalalab.qarejet.presentation.DashboardFragment"
        android:label="DashboardFragment" />

    <fragment
        android:id="@+id/records"
        android:name="com.shagalalab.feature.records.presentation.RecordsFragment"
        android:label="RecordsFragment"
        tools:layout="@layout/fragment_records" />

    <fragment
        android:id="@+id/stats"
        android:name="com.shagalalab.feature.stats.presentation.StatsFragment"
        android:label="StatsFragment"
        tools:layout="@layout/fragment_stats" />
    <fragment
        android:id="@+id/newTransactionFragment"
        android:name="com.shagalalab.feature.transaction.presentation.NewTransactionFragment"
        android:label="NewTransactionFragment"
        tools:layout="@layout/fragment_newtransaction"/>
    <fragment
        android:id="@+id/mainFragment2"
        android:name="com.shagalalab.qarejet.presentation.MainFragment"
        android:label="MainFragment" >
        <action
            android:id="@+id/action_mainFragment_to_newTransactionFragment"
            app:destination="@id/newTransactionFragment" />
    </fragment>
</navigation>